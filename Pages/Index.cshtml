        }

                #instrukcja {
          background-color: gray;
          padding: 4rem 2rem;
          margin:0;
        }

        .section-title {
          font-size: 2.5rem;
          text-align: center;
          margin-bottom: 3rem;
        }

        .instruction-list {
          display: flex;
          flex-direction: column;
          justify-content: center;
          align-items: center;
        }

        .instruction-item {
          display: flex;
          align-items: center;
          margin-bottom: 3rem;
